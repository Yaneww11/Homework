#include <iostream>

using namespace std;

int main()
{
int num = 0, counter = 0;
cout << "Enter a number:  " << endl;
cin >> num;
if (!cin){
    cout << "Wrong input";
}
else
while (num > 0){
    num = num/10;
    counter++;
}
cout << "In that number have " << counter << " numbers" << endl;
    return 0;
}


EXERSISE.2

#include <iostream>

using namespace std;

int main()
{
int num = 0, counter = 0, sum = 0, y = 0;
cout << "Enter a number:  " << endl;
cin >> num;
if (!cin){
    cout << "Wrong input";
}
else
while (num > 0){
    y = num % 10;
    sum +=y;
    num = num/10;
    counter++;
}
cout << "The sum of the numbers is:  " << sum << endl;
    return 0;
}

EXERSISE.3
using namespace std;

int main()
{
  string number{}, reverseNumber{};
    int lenght{};
    char singleNumber{};
    cout << "Please , enter a number : ";
    cin >> number;
    lenght = number.length() - 1;
    for (int i = lenght; i >= 0 ; i--)
    {
        singleNumber = number.at(i);
        reverseNumber += singleNumber;


    }
    cout << "Number reversed:" << reverseNumber;
    return 0;
}

EXERSISE.4

#include <iostream>

using namespace std;

int main()
{
  int num = 0, y = 0;
  int count0 =0,count1 =0,count2 =0,count3 =0,count4 =0,count5 =0,count6 =0,count7 =0,count8 =0,count9 =0;
cout << "Enter a number:  " << endl;
cin >> num;
if (!cin){
    cout << "Wrong input";
}
else
while (num > 0){
    y = num % 10;
    switch(y){
    case 0:
    count0++;
    break;
    case 1:
    count1++;
    break;
    case 2:
    count2++;
    break;
    case 3:
    count3++;
    break;
    case 4:
    count4++;
    break;
    case 5:
    count5++;
    break;
    case 6:
    count6++;
    break;
    case 7:
    count7++;
    break;
    case 8:
    count8++;
    case 9:
    count9++;
    }
num = num/10;
}
cout << "0/" << count0 << " "<< "1/" << count1 << " "<< "2/" << count2 << " "<< "3/" << count3 << " ";
cout << "4/" << count4 << " "<< "5/" << count5 << " "<< "6/" << count6 << " "<< "7/" << count7 << " ";
cout << "8/" << count8 << " "<< "9/" << count9 << " ";


    return 0;
}

EXERSISE.5

#include <iostream>

using namespace std;


int main(){
int rows;
string symbol;
cout << "Enter the number of rows: ";
cin >> rows;
cout << "Enter a symbol: ";
cin >> symbol;
for(int i = 1; i <= rows; i++) {
for(int j = 1; j <= i; j++ )
cout << symbol;
cout << endl;
}
return 0;
}

EXERSISE.6
#include <iostream>

using namespace std;

int main()
{
 int n,i,k,d;
 int m = 0;
cout << "Enter the number of rows: ";
cin >> n;



for(int i = 0; i <= n; i++) {

        for(int j = 1; j <= i; j++ ){
cout << j;
}

 for (k = 1; k <= 2*n - 2*i; k++){
            cout << m << "";
        }
        d = i;
        for (k = 1; k <= i; k++)
        {
            cout << d;
            d--;
        }


cout << endl;
}




    return 0;
}

EXERSISE.7 
#include <iostream>

using namespace std;

int main()
{
 int n,i,k,d;
 int m = 0;

cout << "Enter the number of rows: ";
cin >> n;



for(int i = 0; i <= n; i++) {
          if (i == 5){
            for (int j = 1; j <= i-1; j++) {
                cout << j;
            }
        }
else{

        for(int j = 1; j <= i; j++ ){

cout << j;
}
}

 for (k = 1; k <= (2*n - 2*i) -1 ; k++)
{
            cout << m << "";
        }
        d = i;
        for (k = 1; k <= i; k++){


            cout << d;
            d--;
        }


cout << endl;
}




    return 0;
}
