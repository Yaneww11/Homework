#include <bits/stdc++.h>

#include <cstdlib>
void print_each_digit(int x)
{
    if(x >= 10)
       print_each_digit(x / 10);

    int digit = x % 10;

    std::cout << digit << '\n';
}



using namespace std;
int main()
{

int x ;

cout<<"Write a number: ";
cin>>x;
print_each_digit(x);

    return 0;
}


