#include <bits/stdc++.h>

#include <ctime>
#include <cstdlib>


using namespace std;
int main()
{
int max,random_num;
cout << "Please input max integer: ";
cin >> max;
srand(time(0));
random_num = (rand() % max) + 1;
cout << random_num << endl;
if(random_num/1000 == 0){
    cout << random_num /100 << endl;
    cout << (random_num /10)%10 << endl;
    cout << (random_num %100)%10 << endl;
} else
cout << random_num << endl;
system("pause");


    return 0;
}


