//Exersise4
#include <iostream>
#include <string.h>
#include <stdlib.h>
#include <iomanip>

using namespace std;

int main()
{
char a[20][10];
int sum = 0;
cout << "n = ";
int n;
cin >> n;
int i;
int b[n];
for (i = 0; i <= n; i++) {
cout << "a[" << i << "] = ";
cin >> a[i];
b[i] = atoi(a[i]);
sum = sum + b[i];

}
cout << "The arithmetic mean of the numbers is : " << sum/(n + 1);

    return 0;
}
